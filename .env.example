# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Azure Configuration
# Azure CLI must be authenticated: az login
# Optionally set subscription: az account set --subscription <subscription_id>
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Logging
LOG_LEVEL=INFO

# Config Paths
CLUSTERS_CONFIG_PATH=config/clusters_config.json
ALLOWED_COMMANDS_PATH=config/allowed_commands.json
APP_SETTINGS_PATH=config/app_settings.json

# Audit
AUDIT_LOG_DIR=logs/audit
